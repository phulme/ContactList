<%= form_for @contact, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label 'First Name', :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Surname', :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :surname, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'e-mail', :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :email, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :type, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.select(:type,['Staff','Third Party','Department'],{}, {:class => 'form-control'}) %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>

      <H3>Phone Numbers</H3>
      <%= f.fields_for :PhoneNumbers do |phoneNumbers_form| %>
          <div class="form-group"><%= phoneNumbers_form.select(:p_type,['Mobile','Home','Office','Other'], {},{ :class => 'form-control'})  %></div>
         <div class="form-group"> <%= phoneNumbers_form.text_field :p_number, :class => 'text_field form-control'  %></div>
        <br>
      <% end %>

      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  contacts_path, :class => 'btn btn-default' %>
    </div>
  </div>


<% end %>

<style>

  .form-control {
    display: block;
    width: 45%;
    ;
  }


</style>
